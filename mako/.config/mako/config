# Mako notification daemon configuration

# Sort notifications by urgency
sort=-time

# Appearance
font=monospace 11
background-color=#1a1a1a
text-color=#cccccc
border-color=#333333
border-size=1
border-radius=0

# Dimensions and positioning
width=300
height=100
margin=10
padding=10

# Icon settings
icon-path=/usr/share/icons/hicolor
max-icon-size=48

# Behavior
default-timeout=4000
ignore-timeout=0

# Grouping - stack notifications
group-by=app-name
max-visible=5

# Urgency levels
[urgency=low]
border-color=#555555
default-timeout=3000

[urgency=normal]
border-color=#888888
default-timeout=4000

[urgency=critical]
border-color=#ffffff
text-color=#ffffff
default-timeout=0
